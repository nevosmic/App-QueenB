<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context=".ItemViewF">

    <ImageView
        android:id="@+id/imageViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/queenbGray"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/nameTextViewItem"
            style="@style/nameAgeWhereStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="צילה ונגילה"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/ageTextViewItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/nameAgeWhereStyle"
            android:text="גיל 87"

            />

        <TextView
            android:id="@+id/locationTextViewItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סניף הונלולו"
            style="@style/nameAgeWhereStyle" />

        <ImageView
            android:id="@+id/pinkCrown"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:src="@drawable/girl_item_crown" />

        <TextView
            android:id="@+id/question_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/questionItemStyle"
            android:text="למה?" />

        <TextView
            android:id="@+id/lovedTextViewItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AnswerItemStyle"

            android:text="אהבתי ש..." />

        <TextView
            android:id="@+id/question_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/questionItemStyle"
            android:text="כמה?" />

        <TextView
            android:id="@+id/recommendTextViewItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AnswerItemStyle"
            android:text="אני ממליצה מאוד..." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/queenbPink"
                android:text="צרי קשר כדי לשמוע עוד!" />

            <ImageButton
                android:id="@+id/whatsapp_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/whatsup_logo" />

            <ImageButton
                android:id="@+id/insta_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_margin="16dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/instagram_logo"

                />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</ScrollView>
    </RelativeLayout>