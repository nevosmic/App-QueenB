<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:alpha="0.8"
    android:orientation="vertical"
    tools:context=".InfoF"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="16dp"
                android:text="שמחות שאת מצטרפת אלינו!"
                android:textSize="30dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"

                android:text="בחרי מוקד פעילות"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:columnCount="2"
                android:columnOrderPreserved="true"
                android:useDefaultMargins="true"
                android:layoutDirection="rtl">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/BeerSheva"
                    style="@style/materialCardViewBackgroundStyle"
                    android:layout_width="170dp"
                    android:layout_height="250dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                            style="@style/materialCardViewImageStyle"
                            android:scaleType="fitCenter"
                            android:src="@drawable/city_beer_sheva" />

                        <LinearLayout style="@style/materialCardViewLinearLayoutStyle">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                style="@style/materialCardViewheadlineStyle"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:text="באר-שבע" />

                            <TextView
                                style="@style/materialCardViewSecondaryheadlineStyle"
                                android:text="אוניברסיטת בן גוריון" />
                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Jerusalem1"
                    style="@style/materialCardViewBackgroundStyle"
                    android:layout_width="170dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                            style="@style/materialCardViewImageStyle"
                            android:scaleType="fitCenter"
                            android:src="@drawable/city_jerusalem" />

                        <LinearLayout
                            style="@style/materialCardViewLinearLayoutStyle"
                            android:layout_gravity="right">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                style="@style/materialCardViewheadlineStyle"
                                android:layout_gravity="right"
                                android:gravity="start"
                                android:text="ירושלים" />

                            <TextView
                                style="@style/materialCardViewSecondaryheadlineStyle"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:text="גבעת רם" />
                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


