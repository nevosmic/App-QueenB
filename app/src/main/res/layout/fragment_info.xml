                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Haifa1"
                    style="@style/materialCardViewBackgroundStyle"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                            style="@style/materialCardViewImageStyle"
                            android:src="@drawable/city_haifa" />

                        <LinearLayout
                            style="@style/materialCardViewLinearLayoutStyle">

                            <!-- Title, secondary and supporting text -->
