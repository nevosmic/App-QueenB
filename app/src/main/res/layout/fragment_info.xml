                            android:src="@drawable/city_jerusalem" />

                        <LinearLayout
                            style="@style/materialCardViewLinearLayoutStyle"
                            >

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                style="@style/materialCardViewheadlineStyle"
                                android:text="ירושלים" />

                            <TextView
                                style="@style/materialCardViewSecondaryheadlineStyle"
                                android:text="גוננים" />
                        </LinearLayout>
                    </LinearLayout>

