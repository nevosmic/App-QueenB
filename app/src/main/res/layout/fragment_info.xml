                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Haifa2"
                    style="@style/materialCardViewBackgroundStyle"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                            style="@style/materialCardViewImageStyle"
                            android:layout_gravity="center|center_horizontal"
                            android:src="@drawable/city_haifa" />

                        <LinearLayout
                            style="@style/materialCardViewLinearLayoutStyle"
                            >

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                style="@style/materialCardViewheadlineStyle"
                                android:text="חיפה" />

                            <TextView
                                style="@style/materialCardViewSecondaryheadlineStyle"
                                android:text="אוניברסיטת חיפה" />
                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/registerNow"
                    style="@style/Widget.queenb.materialCardViewBackgroundRegisterStyle"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Title, secondary and supporting text -->
                        <TextView
                            style="@style/materialCardViewheadlineStyle"
                            android:textSize="16sp"
                            android:text="הירשמי עכשיו!"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_gravity="center_horizontal"/>


                        <!-- Media -->
                        <ImageView
                            style="@style/materialCardViewImageStyle"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center|center_horizontal"
                            android:elevation="10dp"
                            android:src="@drawable/trivia_q9_queenb" />



                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </GridLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>