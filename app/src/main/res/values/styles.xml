<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/alef</item>

    </style>
    <!-- custom style -->

    <style name="RadioButtonStyle"
        parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.QueenB.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.QueenB.Toolbar</item>
    </style>

    <style name="TextAppearance.QueenB.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.QueenB.Backdrop" parent="">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Widget.QueenB.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>



    <!--Info fragment styles, for the cards-->
    <style name="materialCardViewBackgroundStyle" parent="">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="materialCardViewheadlineStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:layout_gravity">right</item>
        <item name="cardBackgroundColor">@color/queenbGrayLight</item>
    </style>

    <style name="materialCardViewSecondaryheadlineStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="materialCardViewLinearLayoutStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="materialCardViewImageStyle" parent="">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

<style name="Widget.queenb.materialCardViewBackgroundRegisterStyle" parent="Widget.MaterialComponents.CardView">
    <item name="android:layout_width">170dp</item>
    <item name="android:layout_height">250dp</item>
    <item name="android:layout_margin">16dp</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="cardBackgroundColor">@color/queenbGray</item>
    <item name="shapeAppearanceOverlay">@style/cornerStyleRegister</item>


</style>

<style name="cornerStyleRegister" parent="">
    <item name="cornerFamilyBottomLeft">cut</item>
    <item name="cornerSizeBottomLeft">60dp</item>

</style>
    <!--styles for alertDialog of info-->
    <style name="TextAppearance.MyApp.HeadlineForAlertDialog" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/queenbBordo</item>
    </style>

    <style name="TextAppearance.MyApp.infoAlertTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
    </style>






    <style name="verticalLayoutStyle" parent="">

    </style>
</resources>